.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.container image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.pluginStyle {
  z-index: 2;
  position: absolute;
  top: 15%;
  left: 10%;
  padding: 1em 1em 1em 1em;
  color: #fff;
